---
interface Props {
  title: string;
  tagline: string;
}

const { title, tagline } = Astro.props;
---

<section class="hero">
  <div class="container">
    <h1>{title}</h1>
    <p class="tagline">{tagline}</p>
    <div class="cta-buttons">
      <a href="tel:+919067278158" class="btn primary">
        <i class="fas fa-phone"></i> Call Now
      </a>
      <a href="https://wa.me/919067278158" class="btn secondary">
        <i class="fab fa-whatsapp"></i> WhatsApp
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    color: white;
    text-align: center;
    padding: 6rem 1rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .tagline {
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    min-width: 160px;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      padding: 0 1rem;
    }

    .btn {
      width: 100%;
    }
  }
</style>